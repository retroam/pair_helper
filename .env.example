# Frontend API proxy target used by Vite dev server.
VITE_API_PROXY_TARGET=http://127.0.0.1:8000

# Anthropic Claude API key (required for LLM-powered responses).
ANTHROPIC_API_KEY=

# Cartesia API key (required for TTS voice output).
CARTESIA_API_KEY=

# Browserbase (optional, for live web search concept lookups).
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=

# Notion MCP (optional, for session journal upload).
NOTION_API_KEY=
NOTION_PARENT_PAGE_ID=

# Backend runtime overrides.
DOCKER_IMAGE=python:3.10-slim
CPU_LIMIT=1
MEMORY_LIMIT=512m
PIDS_LIMIT=64
TIMEOUT_SECONDS=10
TMPFS_SIZE=64m
